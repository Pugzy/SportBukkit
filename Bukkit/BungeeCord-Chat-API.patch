+        </repository>
     </repositories>
 
     <distributionManagement>
@@ -85,6 +89,14 @@
             <version>1.19</version>
             <scope>compile</scope>
         </dependency>
+        <dependency>
+            <groupId>net.md-5</groupId>
+            <artifactId>bungeecord-chat</artifactId>
